{
    "name": "fluchi/mailgun-handler",
    "description": "Mailgun handler for Monolog",
    "keywords": ["monolog", "handler", "mailgun"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Luchi",
            "email": "luchifelipe@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "kriswallsmith/buzz": "^1.0",
        "mailgun/mailgun-php": "^2.8",
        "monolog/monolog": "^1.24",
        "nyholm/psr7": "^1.1",
        "symfony/dotenv": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "symfony/var-dumper": "^4.3"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {"MailgunHandler\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Tests\\": "tests/"}
    }
}
